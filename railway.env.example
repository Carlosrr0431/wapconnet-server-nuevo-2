# Railway Environment Variables
# Copy this file to railway.env and configure your private network settings

# Railway Private Network Configuration
RAILWAY_PRIVATE_DOMAIN=wapconnet-server-nuevo-2.railway.internal
PORT=21465

# Database Configuration (if using Railway services)
# MongoDB
MONGODB_URL=mongodb://wapconnet-server-nuevo-2.railway.internal:27017/tokens

# Redis
REDIS_URL=redis://wapconnet-server-nuevo-2.railway.internal:6379
REDIS_PRIVATE_URL=wapconnet-server-nuevo-2.railway.internal

# Webhook Configuration
WEBHOOK_URL=http://wapconnet-server-nuevo-2.railway.internal:21465/webhook

# ChatWoot Configuration (if using)
CHATWOOT_BASE_URL=http://wapconnet-server-nuevo-2.railway.internal:3000

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_S3_BUCKET=

# Security
SECRET_KEY=THISISMYSECURETOKEN

# Logging
LOG_LEVEL=silly
